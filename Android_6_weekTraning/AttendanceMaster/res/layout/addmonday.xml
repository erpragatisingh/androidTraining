<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2" >

    <TextView
        android:id="@+id/lec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lec1"
        android:layout_below="@+id/lec1"
        android:layout_marginTop="15dp"
        android:text="Lec 2 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <EditText
        android:id="@+id/editLec2"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/lec2"
        android:layout_alignLeft="@+id/editLec1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec2"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/lec3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lec2"
        android:layout_below="@+id/lec2"
        android:layout_marginTop="19dp"
        android:text="Lec 3 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <EditText
        android:id="@+id/editLec3"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/editLec2"
        android:layout_alignTop="@+id/lec3"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec3"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/lec4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lec3"
        android:layout_below="@+id/lec3"
        android:layout_marginTop="19dp"
        android:text="Lec 4 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <EditText
        android:id="@+id/editLec4"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/lec4"
        android:layout_alignLeft="@+id/editLec3"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec4"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/lec5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lec4"
        android:layout_below="@+id/lec4"
        android:layout_marginTop="18dp"
        android:text="Lec 5 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <TextView
        android:id="@+id/lec6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lec5"
        android:layout_below="@+id/editLec5"
        android:layout_marginTop="21dp"
        android:text="Lec 6 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <TextView
        android:id="@+id/lec7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lec6"
        android:layout_below="@+id/editLec6"
        android:layout_marginTop="18dp"
        android:text="Lec 7 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <EditText
        android:id="@+id/editLec7"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/lec7"
        android:layout_alignLeft="@+id/editLec6"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec7"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/editLec8"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/lec8"
        android:layout_alignLeft="@+id/editLec7"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec8"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <Button
        android:id="@+id/submit1"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Submit" />

    <EditText
        android:id="@+id/editLec1"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_above="@+id/lec2"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/lec1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec1"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/editLec5"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/lec5"
        android:layout_alignLeft="@+id/editLec4"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec5"
        android:textColor="@android:color/white"
        android:textSize="26sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editLec6"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/lec6"
        android:layout_alignLeft="@+id/editLec5"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec6"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/lec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:text="Lec 1 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <TextView
        android:id="@+id/lec8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lec7"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/editLec1"
        android:text="Lec 8 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

</RelativeLayout>