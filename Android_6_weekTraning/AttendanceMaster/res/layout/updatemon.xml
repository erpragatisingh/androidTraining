        android:text="Lec 3 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <EditText
        android:id="@+id/ueditLe3"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/ueditLe2"
        android:layout_alignTop="@+id/ule3"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec3"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/ule4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ule3"
        android:layout_below="@+id/ule3"
        android:layout_marginTop="19dp"
        android:text="Lec 4 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <EditText
        android:id="@+id/ueditLe4"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/ule4"
        android:layout_alignLeft="@+id/ueditLe3"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec4"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/ule6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ule5"
        android:layout_below="@+id/ueditLe5"
        android:layout_marginTop="21dp"
        android:text="Lec 6 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <TextView
        android:id="@+id/ule7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ule6"
        android:layout_below="@+id/ueditLe6"
        android:layout_marginTop="18dp"
        android:text="Lec 7 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <EditText
        android:id="@+id/ueditLe7"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/ule7"
        android:layout_alignLeft="@+id/ueditLe6"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec7"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/ueditLe8"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/ule8"
        android:layout_alignLeft="@+id/ueditLe7"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec8"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <Button
        android:id="@+id/usub1"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Update" />

    <EditText
        android:id="@+id/ueditLe1"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_above="@+id/ule2"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/ule1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec1"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/ueditLe6"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/ule6"
        android:layout_alignLeft="@+id/ueditLe5"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec6"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/ule1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:text="Lec 1 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <EditText
        android:id="@+id/ueditLe5"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/ueditLe4"
        android:layout_below="@+id/ueditLe4"
        android:layout_marginTop="26dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec5"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/ule8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ule7"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/ueditLe1"
        android:text="Lec 8 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <TextView
        android:id="@+id/ule5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ueditLe5"
        android:layout_alignLeft="@+id/ule4"
        android:text="Lec 5 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

</RelativeLayout>