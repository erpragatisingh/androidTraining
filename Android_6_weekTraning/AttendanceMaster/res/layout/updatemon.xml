<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/ule2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ule1"
        android:layout_below="@+id/ule1"
        android:layout_marginTop="15dp"
        android:text="Lec 2 :"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00FFFF" />

    <EditText
        android:id="@+id/ueditLe2"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/ule2"
        android:layout_alignLeft="@+id/ueditLe1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Your Lec2"
        android:textColor="@android:color/white"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/ule3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ule2"
        android:layout_below="@+id/ule2"
