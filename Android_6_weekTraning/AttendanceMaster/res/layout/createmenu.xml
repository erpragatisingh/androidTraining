<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/newgreewn"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/deltt"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/updatett"
        android:layout_below="@+id/updatett"
        android:layout_marginTop="22dp"
        android:background="@drawable/bin" />

    <Button
        android:id="@+id/updatett"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/addtt"
        android:layout_centerVertical="true"
        android:background="@drawable/updateicon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addtt"
        android:layout_alignBottom="@+id/addtt"
        android:layout_toRightOf="@+id/updatett"
        android:text="Add"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/updatett"
        android:layout_alignBottom="@+id/updatett"
        android:layout_alignLeft="@+id/textView1"
        android:text="Update"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/deltt"
        android:layout_alignBottom="@+id/deltt"
        android:layout_toRightOf="@+id/deltt"
        android:text="Delete"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="25sp"  />

    <Button
        android:id="@+id/addtt"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/updatett"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/addition" />

</RelativeLayout>