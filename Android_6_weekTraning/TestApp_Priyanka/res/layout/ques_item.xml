<?xml version="1.0" encoding="utf-8"?>
<ScrollView  android:layout_width="fill_parent"
    android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" 
    android:background="#FFFFFF">
<LinearLayout  
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="10dp" >
 <RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_name_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:textSize="15dp" 
             android:textColor="#000000"
             android:paddingLeft="10dp"/>

         <Button
            android:id="@+id/logout_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:text="Logout"
            android:textSize="15dp"
            android:paddingRight="10dp"
             android:textColor="#000000" >
        </Button>
 </RelativeLayout>
 <RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
     <TextView android:id="@+id/ques_type"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:paddingTop="30dp"
 android:paddingLeft="10dp"
   android:gravity="left"
   android:layout_gravity="left"
  android:textSize="15dp"
   android:textColor="#000000"
   
  />
     
      <TextView android:id="@+id/ques_marks"
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
         android:paddingTop="30dp"
       android:textColor="#000000"    
       android:gravity="right"
       android:paddingRight="10dp"
       android:layout_alignParentRight="true"
      android:textSize="15dp"
       android:layout_gravity="right"
   />
      </RelativeLayout>
      <Button android:id="@+id/submit_btn"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:textSize="15dp"
          android:text="Submit Test"
         android:layout_gravity="center_horizontal"></Button>"
      
    

   
  
  
   
  
   <ImageView android:id="@+id/ques_img"
        android:layout_height="wrap_content"
       android:layout_width="wrap_content" 
    android:layout_gravity="center"
      android:scaleType="centerInside"
      android:gravity="top" 
           
        />
   
  
  
    <RadioGroup
        android:id="@+id/radio_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal"
         android:layout_gravity="center_horizontal|top"
         android:gravity="top"
           android:paddingBottom="30dp"
        
       
       
      >
 
        <RadioButton
            android:id="@+id/choice_a"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="A" 
            android:layout_gravity="top"
            android:textColor="#000000"
            android:textSize="15dp"
            />
 
        <RadioButton
            android:id="@+id/choice_b"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="B"
            android:layout_gravity="top"
            android:textColor="#000000"
            android:textSize="15dp" />
        
        <RadioButton
            android:id="@+id/choice_c"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="C" 
            android:layout_gravity="top"
            android:textColor="#000000"
            android:textSize="15dp"/>
        
        <RadioButton
            android:id="@+id/choice_d"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="D" 
            android:textSize="15dp"
            android:layout_gravity="top"
            android:textColor="#000000"
            />
 
    </RadioGroup>
<!--     <Button android:id="@+id/save_btn"
        android:text="Save Answer"
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		android:textSize="15dp"
		android:layout_gravity="center"
	
		></Button>  -->
		   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/btn_prev"
        android:layout_alignParentLeft="true"
     android:padding="10dp"
     android:layout_margin="5dp"
     android:textSize="15dp"
       android:text="&lt;&lt;--Previous"/>
     <Button 
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/btn_next"
          android:paddingBottom="30dp"
        android:layout_alignParentRight="true"
     android:padding="10dp"
     android:layout_margin="5dp"
     android:textSize="15dp"
       android:text="Next---&gt;&gt;"/>
    

</RelativeLayout>
</LinearLayout>
</ScrollView>