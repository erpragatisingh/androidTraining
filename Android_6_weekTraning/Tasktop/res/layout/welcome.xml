<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1"
	android:background="@drawable/bg">
	<Button android:id="@+id/button1" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:text="Welcome"
		android:textSize="50dip" android:background="@drawable/topbar"></Button>
	<TextView android:id="@+id/textView1" android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:text="This is a small application that helps you manage yourself by managing your tasks."
		android:layout_weight="0.08"></TextView>
	<TextView android:id="@+id/textView2" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="click i button for info."></TextView>
	<TextView android:id="@+id/textView3" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="click add button to add task"></TextView>

	<Button android:id="@+id/button2" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Continue"
		android:layout_gravity="center"></Button>
</LinearLayout>
