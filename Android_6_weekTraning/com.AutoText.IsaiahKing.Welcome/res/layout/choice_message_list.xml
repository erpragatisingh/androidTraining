<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:scrollbars="vertical" 
                android:background="@drawable/bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:soundEffectsEnabled="true" 
                android:scrollbarSize="5dip" 
                android:scrollbarAlwaysDrawVerticalTrack="true">
                
                
<RelativeLayout android:id="@+id/ivSettings" 
				
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" android:background="@drawable/topbar">
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Select Message" android:textStyle="bold" android:layout_centerInParent="true" android:textColor="#A2F414"></TextView>
				</RelativeLayout>
<ListView android:id="@+id/lvMessagermainchoice" 
		  android:layout_height="0dip"
		  android:layout_width="fill_parent"
		  android:cacheColorHint="#00000000"
		  android:background="#00000000"
		  android:layout_weight="1.0" 
		  android:scrollbars="none" 
		  android:isScrollContainer="true">

</ListView>


</LinearLayout>
